.hr {
    border: white solid 1px;
}

.btnModal {
    flex: 1;
    margin: 0 !important;
}
.cardAction {
    display: flex;
    padding: 0;
    min-height: 50px!important;
}
.cardRadius {
    border-radius: 15px!important;
}
.homefont {
    font-family: "homefont";
}

@font-face
  font-family homefont
  src url(../statics/fonts/Rounded/SimplyRounded.ttf)


.slide-up-enter-active {
    transition: opacity 0.5s, transform 0.5s;
}
.slide-up-leave-active {
  transition: opacity 0.5s;
}
.slide-up-enter{
    opacity: 0;
    transform: translateY(20%);
}
.slide-up-leave-to {
    opacity: 0;
}
.slide-down-enter-active {
  transition: opacity 0.5s;
}
.slide-down-leave-active {
  transition: opacity 0.5s, transform 0.5s;
}
.slide-down-enter{
    opacity: 0;
}
.slide-down-leave-to {
    opacity: 0;
    transform: translateY(20%);
}

.slide-left-enter-active {
   animation: slideTo0 0.2s;
}
.slide-left-leave-active {
  animation: slideToM500 0.2s;
}
.slide-right-enter-active {
   animation: slideToM500 0.2s reverse;
}
.slide-right-leave-active {
  animation: slideTo0 0.2s reverse;
}

@-webkit-keyframes slideToM500 {
    from {  transform:translateX(0px) }
    to {  transform:translateX(-500px)}
}

@-moz-keyframes slideToM500 {
    from {  transform:translateX(0px) }
    to {  transform:translateX(-500px)}
}

@keyframes slideToM500 {
    from {  transform:translateX(0px) }
    to {  transform:translateX(-500px)}
}
@-webkit-keyframes slideTo0 {
    from {  transform:translateX(500px) }
    to {  transform:translateX(0px)}
}

@-moz-keyframes slideTo0 {
    from {  transform:translateX(500px) }
    to {  transform:translateX(0px)}
}

@keyframes slideTo0 {
    from {  transform:translateX(500px) }
    to {  transform:translateX(0px)}
}


.page-enter-active,
.page-leave-active {
    transition: opacity 0.5s, transform 0.5s;
}
.page-enter,
.page-leave-to {
    opacity: 0;
    transform: translateY(-20%);
}

.list-enter-active{
    animation: fadein .2s;
}
.list-leave-active {
    animation: fadein .2s reverse;
}


@-webkit-keyframes fadein {
    from {  transform:scale(0) }
    to {  transform:scale(1)}
}

@-moz-keyframes fadein {
    from {  transform:scale(0) }
    to {  transform:scale(1)}
}

@keyframes fadein {
    from {  transform:scale(0) }
    to {  transform:scale(1)}
}


.item-enter-active, .item-leave-active {
    transition: all 0.3s;
}

.item-enter, .item-leave-to { /* .item-leave-active below version 2.1.8 */
    opacity: 0;
    transform: translateX(30px);
}