// app global css

.backgroundApp{
    background-color: $primary;
}
.bgListLayout{
    background: rgba(27,126,247,0.1);
    min-height: 100vh!important;
    padding:0px!important;
}
.loginWallpaper {
    width: 100%;
    height: 100%;
    background: url("../statics/bgEssai.jpeg") no-repeat;
    background-size: 150% 100%;
    background-position: center;
}
.stickyHeader {
    position: sticky;
    background-color: rgba(255, 255, 255, 0.3); /* 
    background-image: linear-gradient(to right, rgba(109, 160, 222, 0.8), rgb(15, 107, 219, 0.8)); */
